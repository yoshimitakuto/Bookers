<!--投稿一覧機能-->
<h1 class="index-header">Books</h1>


<table>
  <thead>
  <tr>
    <th>Title</th><th>Body</th><th colspan="3"></th>
  </tr>
  </thead>
  
   <% @books.reverse_each do |book| %>

    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", book_edit_path(book.id) %></td>
     <td><%= link_to "Destroy", book_destroy_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   <% end %>

</table>


<!--新規投稿機能-->
<h2 class="create-header">New books</h2>

<%= form_with model: @book do |f| %>

<div class="field">
 <div class="field-item">
  <label>Title</label>
 </div>
   <%= f.text_field:title %>
</div>

 <div class="field">
 <div class="field-item">
  <label>Body</label>
 </div>
   <%= f.text_area:body %>
</div>

 <div class="submit">
  <%= f.submit 'Create book' %>
 </div>
 
<% end %>

